<VirtualHost *:80>
    ServerName bibletithe.com
    ServerAlias www.bibletithe.com tithelie.com www.tithelie.com
    DocumentRoot /home/sites/tithelie
    RewriteEngine on
    RewriteRule ^ https://%{SERVER_NAME}%{REQUEST_URI} [END,NE,R=permanent]
</VirtualHost>

<VirtualHost *:443>
    ServerName bibletithe.com
    ServerAlias www.bibletithe.com
    DocumentRoot /home/sites/tithelie
    ServerAdmin webmaster@localhost
    ErrorLog /sitelogs/tithelie.log
    CustomLog /sitelogs/accesslogs/tithelie-access.log combined

    WSGIScriptAlias / /home/sites/tithelie/tithelie/wsgi.py
    WSGIDaemonProcess tithelie python-home=/home/sites/tithelie/venv python-path=/home/sites/tithelie
    WSGIProcessGroup tithelie

    Alias /static/ /home/sites/tithelie/static/
    Alias /media/ /home/sites/tithelie/media/
    <Directory /home/sites/tithelie/tithelie>
        <Files wsgi.py>
            Require all granted
        </Files>
    </Directory>
    <Directory /home/sites/tithelie/static>
        Require all granted
    </Directory>
    <Directory /home/sites/tithelie/media>
        Require all granted
    </Directory>

    SSLEngine On
    Include /etc/letsencrypt/options-ssl-apache.conf
    SSLCertificateFile /etc/letsencrypt/live/bibletithe.com/fullchain.pem
    SSLCertificateKeyFile /etc/letsencrypt/live/bibletithe.com/privkey.pem
</VirtualHost>

<VirtualHost *:443>
    ServerName tithelie.com
    ServerAlias www.tithelie.com
    DocumentRoot /home/sites/tithelie
    ServerAdmin webmaster@localhost
    ErrorLog /sitelogs/tithelie.log
    CustomLog /sitelogs/accesslogs/tithelie-access.log combined

    WSGIScriptAlias / /home/sites/tithelie/tithelie/wsgi.py
