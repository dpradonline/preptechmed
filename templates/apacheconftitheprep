    WSGIProcessGroup titheliessl

    Alias /static/ /home/sites/tithelie/static/
    Alias /media/ /home/sites/tithelie/media/
    <Directory /home/sites/tithelie/tithelie>
        <Files wsgi.py>
            Require all granted
        </Files>
    </Directory>
    <Directory /home/sites/tithelie/static>
        Require all granted
    </Directory>
    <Directory /home/sites/tithelie/media>
        Require all granted
    </Directory>

    SSLEngine On
    Include /etc/letsencrypt/options-ssl-apache.conf
    SSLCertificateFile /etc/letsencrypt/live/tithelie.com/fullchain.pem
    SSLCertificateKeyFile /etc/letsencrypt/live/tithelie.com/privkey.pem
</VirtualHost>

